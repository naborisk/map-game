<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox fx:controller="mapgame.controller.MapGameController" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/11" onKeyPressed="#keyAction">
  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <children>
    <HBox prefHeight="50">
      <children>
          <Button text="func1" prefWidth="100" onAction="#func1ButtonAction"/>
          <Button text="Sound: ON" prefWidth="100" onAction="#func2ButtonAction"/>
          <Button text="func3" prefWidth="100"/>
          <Button text="func4" prefWidth="100"/>
          <VBox>
              <padding>
                  <Insets topRightBottomLeft="5" />
              </padding>
              <Label fx:id="lblTime" text="00:00" />
          </VBox>
          <VBox>
              <padding>
                  <Insets topRightBottomLeft="5" />
              </padding>
              <Label text="Score" />
          </VBox>
          <VBox>
              <padding>
                  <Insets topRightBottomLeft="5" />
              </padding>
              <Label fx:id="lblScore" text="3000" />
          </VBox>
      </children>
        <GridPane HBox.hgrow="ALWAYS" >
        </GridPane>
        <children>
            <VBox>
                <padding>
                    <Insets left="10"/>
                </padding>
                <ImageView fitWidth="32" preserveRatio="true">
                    <Image url="/mapgame/assets/png/dokuringo.png"/>
                </ImageView>
                <Label fx:id="lblItemApple" prefWidth="32" alignment="BOTTOM_CENTER" text="0/1"/>
            </VBox>
            <VBox>
                <padding>
                    <Insets left="10" top="10"/>
                </padding>
                <ImageView fitWidth="32" preserveRatio="true">
                    <Image url="/mapgame/assets/png/catfood.png"/>
                </ImageView>
                <Label fx:id="lblItemFood" prefWidth="32" alignment="BOTTOM_CENTER" text="0/1"/>
            </VBox>
            <VBox>
                <padding>
                    <Insets left="10"/>
                </padding>
                <ImageView fitWidth="32" preserveRatio="true">
                    <Image url="/mapgame/assets/png/catplay.png"/>
                </ImageView>
                <Label fx:id="lblItemPlay" prefWidth="32" alignment="BOTTOM_CENTER" text="0/1"/>
            </VBox>
        </children>
    </HBox>
    <GridPane fx:id="mapGrid" prefWidth="360" prefHeight="360" >
    </GridPane>

  </children>
</VBox>